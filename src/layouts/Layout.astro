---
import Header from "../components/Header.astro"
import Sidebar from "../components/Sidebar.astro"
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- <link rel="stylesheet" href="/src/styles/global.css"> -->
    <title>Youtube Clone</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header Section -->
    <header>
        <Header />
        <!-- <h1>hello</h1> -->
    </header>
    <!-- Sidebar and Main Content -->
    <div class="d-flex">
        <Sidebar />
        <main id="content" class="flex-grow-1 p-3" style="margin-top: 60px;">
            <slot />
          </main>
          
    </div>

    <!-- Scripts -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> -->
     <script>
    document.addEventListener("DOMContentLoaded", () => {
        const menuIcon = document.getElementById("menu-icon");
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("content"); // Your main content ID
      
        // Toggle sidebar visibility and adjust content margin
        menuIcon.addEventListener("click", () => {
          sidebar.classList.toggle("show");
          mainContent.classList.toggle("with-sidebar");
        });
      
        // Close sidebar on outside click (small screens only)
        document.addEventListener("click", (e) => {
          if (
            sidebar.classList.contains("show") &&
            !sidebar.contains(e.target) &&
            !menuIcon.contains(e.target) &&
            window.innerWidth < 992
          ) {
            sidebar.classList.remove("show");
            mainContent.classList.remove("with-sidebar");
          }
        });
      });
    </script>
    <style>
        /* Default content margin when the sidebar is hidden */
main {
  margin-left: 60px; /* Adjust this value as needed */
  transition: margin-left 0.3s ease-in-out;
}

/* When the sidebar is visible */
main.with-sidebar {
  margin-left: 240px; /* Matches the width of the sidebar */
}

    </style>
</body>
    </html>
---
const { title, pubDate, description, image, tags = [] } = Astro.props;
---

<div class="post-card d-flex flex-column">
  <div class="thumbnail">
    <img src={image.url} alt={image.alt} class="card-img-top rounded border shadow-sm" />
  </div>
  <div class="d-flex mt-1 px-3 align-items-start">
    <!-- User Avatar -->
    <img
      src="/images/me.jpeg"
      alt="User Avatar"
      class="avatar rounded-circle me-3"
    />
    <!-- Post Details -->
    <div class="post-details">
      <h3 class="card-title text-truncate mb-1">{title}</h3>
      <p class="card-meta text-muted small mb-0">
        Naveen Pal â€¢ {new Date(pubDate).toLocaleDateString('en-US', {
          day: 'numeric',
          month: 'short',
          year: 'numeric',
        })}
      </p>
      
      {tags && tags.length > 0 && (
        <div class="tags-container mt-2">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </div>
</div>

<style>
.post-card {
  /* max-width: 100%;  */
  max-width: 400px;
  overflow: hidden; 
  margin: 0 auto; 
}
.thumbnail img {
  /* width: 100%; */
  object-fit: contain;
  aspect-ratio: 16 / 9;
}

.thumbnail:hover {
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 40px;
  height: 40px;
  object-fit: cover;
  flex-shrink: 0; 
  margin-top: 4px;
}

.post-details {
  flex-grow: 1; 
  max-width: calc(100% - 60px); 
}

.post-details .card-title {
  font-size: 1rem;
  font-weight: bold;
  line-height: 1.2;
  color: #000;
}

.post-details .card-meta {
  font-size: 0.875rem;
  color: #606060;
  line-height: 1.3;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 5px;
}

.tag {
  background-color: #f0f0f0;
  color: #333;
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 0.7rem;
  white-space: nowrap;
}
</style>
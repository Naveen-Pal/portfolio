---
const { title, pubDate, description, image } = Astro.props;
---

<div class="post-card d-flex flex-column">
  <div class="thumbnail ">
    <img src={image.url} alt={image.alt} class="card-img-top rounded border shadow-sm" />
  </div>
  <div class="d-flex mt-1 px-3 align-items-start">
    <!-- User Avatar -->
    <img
      src="/images/me.jpeg"
      alt="User Avatar"
      class="avatar rounded-circle me-3"
    />
    <!-- Post Details -->
    <div class="post-details">
      <h3 class="card-title text-truncate mb-1">{title}</h3>
      <p class="card-meta text-muted small mb-0">
        Naveen Pal â€¢ {new Date(pubDate).toLocaleDateString('en-US', {
          day: 'numeric',
          month: 'short',
          year: 'numeric',
        })}
      </p>
    </div>
  </div>
</div>

<style>
/* Card Styles */
.post-card {
  margin: 10px;
  width: 100%;
  max-width: 360px; /* Set the card size like YouTube's */
  background-color: #fff;
  overflow: hidden;
  border: none;
  transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.thumbnail:hover {
  transform: scale(1.02); 
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

/* Card Image */
.thumbnail img {
  width: 100%;
  aspect-ratio: 16 / 9; /* Maintain video thumbnail aspect ratio */
  object-fit: cover;
}


.avatar {
  width: 40px;
  height: 40px;
  object-fit: cover;
  flex-shrink: 0; /* Prevent the avatar from shrinking */
  margin-top: 4px; /* Align vertically with content */
}

/* Post Details */
.post-details {
  flex-grow: 1; /* Make the details expand as needed */
  max-width: calc(100% - 60px); /* Adjust to avoid overlap with avatar */
}

.post-details .card-title {
  font-size: 1rem;
  font-weight: bold;
  line-height: 1.2;
  color: #000;
}

.post-details .card-meta {
  font-size: 0.875rem;
  color: #606060;
  line-height: 1.3;
}

/* Card Responsive Adjustments */
@media (max-width: 576px) {
  .post-card {
    max-width: 100%;
  }
}
</style>

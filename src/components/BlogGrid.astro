---
import Card from "../components/Card.astro";

const blogs = await Astro.glob('../pages/blogs/*.md');
---

<div class="blog-grid">
    {blogs.map((blog) => {
        const { url, frontmatter } = blog;
        return (
            <a href={url} key={url}>
                <Card {...frontmatter} />
            </a>
        );
    })}
</div>

<style>
    .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }
    a {
        text-decoration: none;
        color: inherit;
    }
</style>

---
// PostImage.astro
export interface Props {
  src: string;
  alt?: string;
  caption?: string;
  width?: string; // Accept percentage as string
  height?: string; // Optional
}

const { src, alt, caption, width, height } = Astro.props;
---
<div class="post-image-wrapper" style={`width: ${width || '100%'}; height: ${height || 'auto'};`}>
    <img
        src={src}
        alt={alt || 'Image'}
        style="max-width: 100%; display: block; height: auto;"
    />
    {caption && (
        <p class="text-center text-muted small mt-2">
            {caption}
        </p>
    )}
</div>

<style>
    .post-image-wrapper {
        margin: 1rem 0;
        text-align: center;
    }
</style>
